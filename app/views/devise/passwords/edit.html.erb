<%= render 'devise/shared/layout' do %>
  <div class="order-2 col-lg-5 col-md-12">
    <%= image_tag('update-password.svg',
      alt: 'Change your password',
      class: 'img-fluid') %>
  </div>

  <div class="order-1 col-lg-7 col-md-12 d-flex flex-row align-items-center">
    <div class="card-body p-md-5">
      <h3 class="mb-5 text-uppercase fs-4">Change your password</h3>

      <%= form_tag(password_path(resource_name), method: :put) do |f| %>
        <%= render 'devise/shared/error_messages', resource: resource %>
        <%= hidden_field_tag "#{resource_name}[reset_password_token]", resource.reset_password_token %>

        <% if @minimum_password_length %>
          <p class='text-muted mb-1'>Minimum <%=@minimum_password_length %> characters</p>
        <% end %>
        <div class="form-floating mb-3">
          <%= password_field_tag "#{resource_name}[password]", nil, autofocus: true,
            class: "form-control#{' is-invalid' if resource.errors[:password].any?}",
            placeholder: 'Password' %>
          <%= label_tag :password, 'Password' %>
          <% if resource.errors[:password].any? %>
            <div class="text-danger">
              <%= resource.errors[:password].join(", ") %>
            </div>
          <% end %>
        </div>
        
        <div class="form-floating mb-3">
          <%= password_field_tag "#{resource_name}[password_confirmation]", nil,
            class: "form-control#{' is-invalid' if resource.errors[:password_confirmation].any?}",
            placeholder: 'Password confirmation' %>
          <%= label_tag :password_confirmation, 'Password confirmation' %>
          <% if resource.errors[:password_confirmation].any? %>
            <div class="text-danger">
              <%= resource.errors[:password_confirmation].join(", ") %>
            </div>
          <% end %>
        </div>


        <div class="d-flex justify-content-end pt-3">
          <%= button_tag type: 'submit', class: 'btn btn-warning btn-lg ms-2' do %>
            Change my password
          <% end %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div>
<% end %>
