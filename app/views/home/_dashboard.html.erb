<div class='clearfix pt-3'></div>

<div class="card my-3">
  <div class="row g-0">
    <div class="col-md-4 d-flex align-items-center">
      <%= image_tag("users.png", class: "img-fluid rounded-start", alt: "Users list") %>
    </div>
    <div class="col-md-8">
      <div class="card-body d-flex flex-column justify-content-between h-100">
        <div>
          <h5 class="card-title">Manage Users</h5>
          <% if current_user.super_admin? %>
            <p class="card-text">You can create, edit, and delete users.</p>
            <%= link_to "Manage", users_path, class: "btn btn-sm btn-primary" %>
          <% else %>
            <p class="card-text">You can only view users.</p>
            <%= link_to "Browse", users_path, class: "btn btn-sm btn-primary" %>
          <% end %>
        </div>
        <p class="card-text"><small class="text-body-secondary">Total: <%= pluralize(User.count, "user") %></small></p>
      </div>
    </div>
  </div>
</div>
