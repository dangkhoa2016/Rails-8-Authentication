<h1>Search Result</h1>

<div class="my-5 card shadow-lg p-4">
  <h3>Search Form</h3>

  <%= form_tag search_path, method: :get do %>
    <div class='row mb-3'>
      <div class="col-md-6">
        <%= text_field_tag :query, params[:query], class: 'form-control', placeholder: 'Search for something...' %>
      </div>
      <div class="col-md-6 mt-3 mt-md-0">
        <div class='row'>
          <div class="col-sm-6">
            <%= select_tag :category, options_for_select(['All', 'Books', 'Movies', 'Music'], params[:category]), class: 'form-select' %>
          </div>
          <div class="col-sm-6 mt-3 mt-sm-0">
            <%= select_tag :order, options_for_select(['Newest', 'Oldest'], params[:order]), class: 'form-select' %>
          </div>
        </div>
      </div>
    </div>

    <div class='row'>
      <div class="col-sm-6">
        <button type="submit" class="btn btn-primary w-100">Search</button>
      </div>
      <div class="col-sm-6 mt-3 mt-sm-0">
        <button type="submit" class="btn btn-secondary w-100">Clear</button>
      </div>
    </div>

  <% end %>
</div>

