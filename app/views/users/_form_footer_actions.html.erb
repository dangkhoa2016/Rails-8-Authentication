
<div class="mb-3 d-flex justify-content-between">
  <%= link_to 'Back', users_path, class: 'btn btn-secondary' %>
  <% if @user.persisted? %>
    <%= link_to 'View', user_path(@user), class: 'btn btn-info' %>

    <%= link_to 'Delete', user_path(@user), method: :delete,
      data: { confirm: 'Are you sure?', turbo_confirm: 'Are you sure?', turbo_method: :delete },
      class: 'btn btn-danger' %>
  <% end %>
</div>
