<header class="bg-body-tertiary p-3">
  <div class="container">
    <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
      <%= link_to root_path, class: "d-flex align-items-center mb-2 mb-lg-0 text-decoration-none" do %>
        <i class="bi bi-house-door-fill"></i>
      <% end %>

      <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
        <li>
          <%= link_to 'Home', root_path, class: "nav-link px-2" %>
        </li>
        <li>
          <%= link_to 'Features', features_static_pages_path, class: "nav-link px-2" %>
        </li>
        <li>
          <%= link_to 'FAQs', faqs_static_pages_path, class: "nav-link px-2" %>
        </li>
        <li>
          <%= link_to 'About', about_static_pages_path, class: "nav-link px-2" %>
        </li>
        <li>
          <%= link_to 'Contact', contact_static_pages_path, class: "nav-link px-2" %>
        </li>
      </ul>

      <form class="col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3"
        role="search" method="get"
        action='<%= search_path %>'>
        <input type="search" class="form-control"
          name="q"
          placeholder="Search..." aria-label="Search" />
      </form>

      <div class="text-end">
        <button type="button" class="btn btn-outline-info me-2">Login</button>
        <button type="button" class="btn btn-warning">Sign-up</button>
      </div>
    </div>
  </div>
</header>
